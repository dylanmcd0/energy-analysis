# Energy Analysis Platform - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Energy Information Administration (EIA) API
# Get your free API key at: https://www.eia.gov/opendata/register.php
EIA_API_KEY=your_eia_api_key_here

# Alpha Vantage API (for financial data)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# AWS Configuration (optional - for S3 storage)
# Only needed if using S3 for blog content and data storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your-energy-analysis-bucket

# Database Configuration
# SQLite database path (default: data/database.db)
DATABASE_PATH=data/database.db

# Application Configuration
APP_NAME=Energy Analysis Platform
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# Data Update Settings
DATA_UPDATE_FREQUENCY=daily
AUTO_UPDATE_ENABLED=true

# API Rate Limiting
EIA_CALLS_PER_MINUTE=60
ALPHA_VANTAGE_CALLS_PER_MINUTE=5

# Model Configuration
DEFAULT_FORECAST_HORIZON=30
MODEL_RETRAIN_FREQUENCY=weekly

# Notification Settings (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_ADDRESS=your.email@example.com
# EMAIL_PASSWORD=your_app_password